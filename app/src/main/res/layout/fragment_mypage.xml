<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_mypage_household_ek1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">
        <!-- 상단바-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="240dp"
            android:background="@color/_bg__intro_ek2_color"
            android:gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="2dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/babygage_ek10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/unibudget" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/financial_my_page"
            android:layout_width="177.5dp"
            android:layout_height="41.5dp"
            android:layout_marginLeft="21.01dp"
            android:layout_marginTop="86dp"
            android:text="@string/my_page_string"
            android:textColor="@color/babygage_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View

            android:layout_width="161.03dp"
            android:layout_height="1dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="117dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_3"
            android:layout_width="161.03dp"
            android:layout_height="1dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="173dp"
            android:background="@drawable/line_3_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="76.5dp"
            android:layout_height="28.5dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="152dp"
            android:text="user"
            android:textColor="@color/babygage_color"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="140.5dp"
            android:layout_height="34.5dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="180dp"
            android:text="username@naver.com"
            android:textColor="@color/babygage_color"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_2_ek3"
            android:layout_width="161.03dp"
            android:layout_height="1dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="202dp"
            android:background="@drawable/line_2_ek3_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/account_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="133dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/vector_ek28"
                android:layout_width="84.17dp"
                android:layout_height="84.17dp"
                android:layout_marginStart="8.42dp"
                android:layout_marginTop="8.42dp"
                android:contentDescription="vector_ek28"
                android:src="@drawable/vector_ek28" />

        </RelativeLayout>

        <ImageView
            android:layout_width="92dp"
            android:layout_height="80dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="260dp"
            android:contentDescription="vector_ek29"
            android:src="@drawable/vector_ek29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/vector_ek29"
            android:layout_width="98dp"
            android:layout_height="80dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="260dp"
            android:contentDescription="vector_ek30"
            android:src="@drawable/vector_ek29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView

            android:id="@+id/textView5"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="151dp"
            android:text="@string/name_string"
            android:textColor="@color/babygage_color"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="181dp"
            android:text="@string/e_mail_string"
            android:textColor="@color/babygage_color"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/menu_right_ek4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="407dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyHouse"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/_rectangle_50_shape"
            android:text="HOUSEHOLD\nLedger"
            android:textSize="11dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyFinancial"
            android:layout_width="81dp"
            android:layout_height="51dp"
            android:layout_marginStart="228dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/_rectangle_50_shape"
            android:text="FINANCIAL\nAudit"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/menu_right_ek6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="577dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </RelativeLayout>


        <View
            android:id="@+id/line_5"
            android:layout_width="210dp"
            android:layout_height="1dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="428dp"
            android:background="@drawable/line_5_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="130.5dp"
            android:layout_height="38.5dp"
            android:layout_marginTop="92dp"
            android:text="My Expenditure"
            android:textColor="@color/babygage_color"
            android:textSize="12dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vector_ek29" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vector_ek29"
            app:selectionRequired="true"
            app:singleSelection="true">


            <Button
                android:id="@+id/button1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="household"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="financial"
                android:textSize="10dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <View
            android:id="@+id/household_total"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rectangle_4_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <View
            android:id="@+id/financial_total"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rectangle_4_ek1_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/household_expenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/household_total"
            app:layout_constraintEnd_toEndOf="@+id/household_total"
            app:layout_constraintStart_toStartOf="@+id/household_total"
            app:layout_constraintTop_toTopOf="@+id/household_total" />

        <TextView
            android:id="@+id/financial_expenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/financial_total"
            app:layout_constraintEnd_toEndOf="@+id/financial_total"
            app:layout_constraintStart_toStartOf="@+id/financial_total"
            app:layout_constraintTop_toTopOf="@+id/financial_total" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>