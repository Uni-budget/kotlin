<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetImageActivity">

    <!-- 상단바-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="240dp"
        android:background="@color/_bg__intro_ek2_color"
        android:gravity="top"
        app:layout_constraintBottom_toTopOf="@+id/iv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="2dp">

            <TextView
                android:id="@+id/babygage_ek10"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|center"

                android:fontFamily="monospace"
                android:gravity="center"
                android:text="BABYGAGE"
                android:textColor="@color/babygage_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="62dp"
                android:layout_height="53dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/babygage_ek10"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_32_ek1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <View
        android:id="@+id/rectangle_32_ek1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/rectangle_32_ek1_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.741" />

    <View
        android:id="@+id/rectangle_47"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rectangle_47_shape"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_42"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_32_ek1"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/totalTxt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_47"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_47"
        app:layout_constraintStart_toStartOf="@+id/rectangle_47"
        app:layout_constraintTop_toTopOf="@+id/rectangle_47" />


    <View
        android:id="@+id/rectangle_3"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:background="@drawable/rectangle_47_shape"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_47"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_4" />

    <EditText
        android:id="@+id/productTxt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toTopOf="@+id/rectangle_3" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:background="@drawable/rectangle_47_shape"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_47"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_32_ek1"
        app:layout_constraintVertical_bias="0.29000002" />

    <EditText

        android:id="@+id/dateTxt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_4"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
        app:layout_constraintStart_toStartOf="@+id/rectangle_4"
        app:layout_constraintTop_toTopOf="@+id/rectangle_4" />

    <Button
        android:id="@+id/rectangle_42"
        android:layout_width="232dp"
        android:layout_height="40dp"

        android:background="@drawable/rectangle_42_shape"
        android:text="Add a receipt"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/_rectangle_59_color"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_32_ek1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_32_ek1"
        app:layout_constraintVertical_bias="0.958" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year/month/date"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_4"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_32_ek1"
        app:layout_constraintVertical_bias="0.681" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product name / price"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_4"
        app:layout_constraintVertical_bias="0.94" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total price"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_47"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_32_ek1"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/rectangle_32_ek1"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_3"
        app:layout_constraintVertical_bias="0.90999997" />

    <Button
        android:id="@+id/testBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select again"
        app:backgroundTint="@color/rectangle_15_ek1_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_32_ek1" />

</androidx.constraintlayout.widget.ConstraintLayout>